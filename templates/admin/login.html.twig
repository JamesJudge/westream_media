{# admin/companyList.html.twig #}
{% extends 'admin-base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block breadcrum %}
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item"><a href="/admin">Admin</a></li>
        <li class="breadcrumb-item active" href="/admin/login">Login</li>
    </ol>
{% endblock %}

{% block body %}

    <section class="contact-section">
        <div class="container">
            <br/>
            {{ form_start(form) }}
            <div class="section-title text-center">
                <h2>Log In</h2>
            </div>
            {% if form_errors(form) %}
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-center alert alert-danger">
                            <div>
                                {{ form_errors(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}
            <div class="row">
                <div class="col-lg-12">
                    <div class="form-center">
                        {{ form_label(form.email) }} <br/> {{ form_widget(form.email) }}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="form-center">
                        {{ form_label(form.passwordHash) }} <br/> {{ form_widget(form.passwordHash) }}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="form-center">
                        <button class="btn btn-primary">Log In</button>
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
            <div class="row">
                <div class="col-lg-12">
                    <div class="form-center">
                        <p>Don't have an account? <a href="/signup">Click here to sign up now for free</a>!</p>
                    </div>
                </div>
            </div>

        </div>
    </section>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
