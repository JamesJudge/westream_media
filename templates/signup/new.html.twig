{# signup/new.html.twig #}
{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}

    <style type="text/css">
        form div.row{
            padding-bottom: 2em;
        }

        form div.row label{
            color: white;
            font-weight: bold;
            padding-left: 10px;
            width: 80%
        }

        /*
        form div.row input{
            width: 80%
        }
        */
        /*
        form div.row{
            width: 100%;
            display: list-item;
            margin: 0 auto;
        }
        */

        form > div > div > div > label.required{
            /*
            text-decoration: underline;
            text-decoration-color: red;
            */
        }

        form > div > div > div > input{
            width:100%;
            max-width: 400px;
        }

        .form-center{
            text-align: center;
        }
    </style>



{% endblock %}

{% block body %}

    <section class="contact-section">
        <div class="container">
            <br/>
            {{ form_start(form) }}
                <div class="section-title text-center">
                    <h2>Sign Up Now</h2>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-center">
                            <p>Already have an account? <a href="/login">Click here to log in</a>.</p>
                        </div>
                    </div>
                </div>
                {% if form_errors(form) %}
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-center alert alert-danger">
                            <div>
                                {{ form_errors(form) }}
                            </div>
                        </div>
                    </div>
                </div>
                {% endif %}
                <form class="contact-form">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-center">
                                    {{ form_label(form.email) }} <br/> {{ form_widget(form.email) }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-center">
                                {{ form_label(form.password) }} <br/> {{ form_widget(form.password) }}
                            </div>
                        </div>
                    </div>
                    <!--
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-center">
                                <label for="form_passwordConfirm" class="required">Password Confirm</label> <br/> <input type="password" id="form_passwordConfirm" name="form[passwordConfirm]" required="required" />
                            </div>
                        </div>
                    </div>
                    -->
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-center">
                                {{ form_label(form.nickname) }} <br/> {{ form_widget(form.nickname) }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-center">
                                {{ form_label(form.firstName) }} <br/> {{ form_widget(form.firstName) }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-center">
                                {{ form_label(form.lastName) }} <br/> {{ form_widget(form.lastName) }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-center">
                                <button class="btn btn-primary">Sign me up!</button>
                            </div>
                        </div>
                    </div>
                </form>
            {{ form_end(form) }}
        </div>
    </section>

{{ form_end(form) }}

{% endblock %}

{% block javascripts %}

    {{ parent() }}

    <script type="text/javascript">

        function checkPasswords(){
            if (document.getElementById('form_passwordConfirm') != document.getElementById('form_passwordHash')){
                alert('Passwords do not match');
                return false;
            }else{
                return true;
            }
        }

