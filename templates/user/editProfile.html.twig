{# user/editProfile.html.twig #}

{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}

    <style type="text/css">
        form div.row{
            padding-bottom: 2em;
        }

        form div.row label{
            color: white;
            font-weight: bold;
            padding-left: 10px;
            width: 80%
        }

        form > div > div > div > label.required{
            /*
            text-decoration: underline;
            text-decoration-color: red;
            */
        }

        form > div > div > div > input{
            width:100%;
            max-width: 400px;
        }

        .form-center{
            text-align: center;
        }

        .mandaroty, .errorMsg {
            color: red;
        }
    </style>
{% endblock %}

{% block body %}

<section class="contact-section">
    <div class="container">
        <br/>
        {{ form_start(form) }}
            <div class="section-title text-center">
                <h2>Edit Profile</h2>
            </div>

            {{ form_errors(form) }}

            {% for error in errors %}
                <li>{{ error.message }}</li>
            {% endfor %}

            <div class="row">
                <div class="col-lg-3">&nbsp;</div>
                <div class="col-lg-3">
                    <span class="mandaroty">*</span>{{ form_label(form.email) }}
                </div>
                <div class="col-lg-6">
                    <div class="form-left">
                    {{ form_widget(form.email) }}
                    </div>
                    <span class="errorMsg">{{ validateFields.email }}</span>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-3">&nbsp;</div>
                <div class="col-lg-3">
                    <span class="mandaroty">*</span>{{ form_label(form.nickname) }}
                </div>
                <div class="col-lg-6">
                    <div class="form-left">
                    {{ form_widget(form.nickname) }}
                    </div>
                    <span class="errorMsg">{{ validateFields.nickname }}</span>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-3">&nbsp;</div>
                <div class="col-lg-3">
                    <span class="mandaroty">*</span>{{ form_label(form.firstName) }}
                </div>
                <div class="col-lg-6">
                    <div class="form-left">
                    {{ form_widget(form.firstName) }}
                    </div>
                    <span class="errorMsg">{{ validateFields.firstName }}</span>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-3">&nbsp;</div>
                <div class="col-lg-3">
                    <span class="mandaroty">*</span>{{ form_label(form.lastName) }}
                </div>
                <div class="col-lg-6">
                    <div class="form-left">
                    {{ form_widget(form.lastName) }}
                    </div>
                </div>
                <span class="errorMsg">{{ validateFields.lastName }}</span>
            </div>
            
            <div class="row">
                <div class="col-lg-3">&nbsp;</div>
                <div class="col-lg-3">
                    {{ form_label(form.profileImage) }}
                </div>
                <div class="col-lg-6">
                    <div class="form-left">
                    {{ form_widget(form.profileImage) }}
                    </div>
                    <span class="errorMsg">{{ validateFields.profileImage }}</span>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-3">&nbsp;</div>
                <div class="col-lg-3">
                    {{ form_label(form.category) }}
                </div>
                <div class="col-lg-6">
                    <div class="form-left">
                    {{ form_widget(form.category) }}
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-3">&nbsp;</div>
                <div class="col-lg-3">
                    {{ form_label(form.bio) }}
                </div>
                <div class="col-lg-6">
                    <div class="form-left">
                    {{ form_widget(form.bio) }}
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-lg-12">
                    <div class="form-center">
                        <button class="btn btn-primary">Save</button>
                        <button class="btn btn-primary">Cancel</button>
                    </div>
                </div>
            </div>
        {{ form_end(form) }}
    </div>
</section>

{% endblock %}